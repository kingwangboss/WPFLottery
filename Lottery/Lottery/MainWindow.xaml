<Window x:Class="Lottery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lottery"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <TextBlock x:Name="textBlock" FontSize="18" HorizontalAlignment="Left" Margin="62,49,0,0" TextWrapping="Wrap" Text="用户名/手机号：" VerticalAlignment="Top" Height="30" Width="148"/>
        <TextBlock x:Name="textBlock1" FontSize="18" HorizontalAlignment="Left" Margin="62,100,0,0" TextWrapping="Wrap" Text="密码：" VerticalAlignment="Top" RenderTransformOrigin="1.098,0.409"/>
        <TextBox x:Name="txtUsername" FontSize="18" HorizontalAlignment="Left" Height="30" Margin="234,49,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="178"/>
        <PasswordBox x:Name="txtPassword" FontSize="18" HorizontalAlignment="Left" Height="29" Margin="234,99,0,0" VerticalAlignment="Top" Width="178"/>
        <Button x:Name="loginBtn" Content="登陆" HorizontalAlignment="Left" Margin="234,189,0,0" VerticalAlignment="Top" Width="111" Height="31" Click="loginBtn_Click"/>


    </Grid>
</Window>
